---
import { getCollection } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { formatDate } from "@/utils";
import bluesky from "@/assets/social/128px-Bluesky_Logo.svg.png";
import linkedin from "@/assets/social/LI-In-Bug.png";
import X from "@/assets/social/x.com-logo-white.png";

export async function getStaticPaths() {
  const allBlogs = await getCollection("blogs");
  return allBlogs.map((blog) => ({
    params: { slug: blog.slug },
    props: blog,
  }));
}

const blog = Astro.props;
const { Content } = await blog.render();

// Get all blogs for related articles, excluding current one
const allBlogs = await getCollection("blogs");
const relatedBlogs = allBlogs
  .filter((item) => item.slug !== blog.slug)
  .slice(0, 3);

// Create share URLs
const currentUrl = `${Astro.url.origin}/blogs/${blog.slug}`;
const title = blog.data.title;
const twitterShareUrl = blog.data.socialLinks?.twitter || `https://twitter.com/intent/tweet?url=${encodeURIComponent(currentUrl)}&text=${encodeURIComponent(title)}`;
const linkedinShareUrl = blog.data.socialLinks?.linkedin || `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(currentUrl)}`;
const blueskyShareUrl = blog.data.socialLinks?.bluesky || `https://bsky.app/intent/compose?text=${encodeURIComponent(`${title} ${currentUrl}`)}`;
---

<BaseLayout title={blog.data.title}>
  <!-- Hero Section with Featured Image as Background -->
  {blog.data.image ? (
    <div
      class="relative h-96 sm:h-[500px] overflow-hidden"
      style={`background-image: url('${blog.data.image}'); background-size: cover; background-position: center;`}
    >
      <!-- Overlay -->
      <div class="absolute inset-0 bg-black/40"></div>
      
      <!-- Content Overlay -->
      <div class="relative h-full flex items-end">
        <div class="w-full px-4 sm:px-6 lg:px-8 pb-8">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-4">
            {blog.data.title}
          </h1>
          <div class="flex items-center space-x-4 text-white/90">
            {blog.data.author && (
              <div>
                <p class="text-sm font-medium">{blog.data.author}</p>
              </div>
            )}
            <time datetime={blog.data.date.toISOString()} class="text-sm">
              {formatDate(blog.data.date)}
            </time>
          </div>
        </div>
      </div>
    </div>
  ) : (
    <div class="relative isolate overflow-hidden bg-gray-900 py-24 sm:py-32">
      <div class="mx-auto max-w-7xl px-6 h-[5rem] lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h1 class="text-5xl font-semibold text-white sm:text-7xl">Blog</h1>
        </div>
      </div>
    </div>
  )}

  <main class="min-h-screen">
    <!-- Navigation Breadcrumb -->
    <nav class="bg-white border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-2 text-sm">
            <a
              href="/blogs"
              class="inline-flex items-center text-gray-500 transition-colors duration-200"
            >
              <svg
                class="w-4 h-4 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 19l-7-7m0 0l7-7m-7 7h16"
                ></path>
              </svg>
              Back to Blogs
            </a>
          </div>
          
          <!-- Social Share Icons (Mobile & Tablet Only) -->
          <div class="flex items-center space-x-3 lg:hidden">
            <span class="text-sm text-gray-600 font-medium">Share:</span>
            <a
              href={twitterShareUrl}
              target="_blank"
              rel="noopener noreferrer"
              title="Share on X"
              class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 hover:bg-gray-200 transition-colors"
            >
              <img src={X.src} alt="X" class="w-4 h-4" />
            </a>
            <a
              href={linkedinShareUrl}
              target="_blank"
              rel="noopener noreferrer"
              title="Share on LinkedIn"
              class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 hover:bg-gray-200 transition-colors"
            >
              <img src={linkedin.src} alt="LinkedIn" class="w-4 h-4" />
            </a>
            <a
              href={blueskyShareUrl}
              target="_blank"
              rel="noopener noreferrer"
              title="Share on Bluesky"
              class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 hover:bg-gray-200 transition-colors"
            >
              <img src={bluesky.src} alt="Bluesky" class="w-4 h-4" />
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Blog Content -->
    <article class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="lg:grid lg:grid-cols-4 lg:gap-8">
        <!-- Sticky Social Share (Desktop Only) -->
        <div class="hidden lg:block">
          <div class="sticky top-24 flex flex-col items-center space-y-4 py-8">
            <span class="text-sm font-semibold text-gray-600 rotate-90 whitespace-nowrap origin-left">SHARE</span>
            <div class="flex flex-col space-y-3">
              <a
                href={twitterShareUrl}
                target="_blank"
                rel="noopener noreferrer"
                title="Share on X"
                class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 hover:bg-gray-200 transition-colors hover:scale-110"
              >
                <img src={X.src} alt="X" class="w-5 h-5" />
              </a>
              <a
                href={linkedinShareUrl}
                target="_blank"
                rel="noopener noreferrer"
                title="Share on LinkedIn"
                class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 hover:bg-gray-200 transition-colors hover:scale-110"
              >
                <img src={linkedin.src} alt="LinkedIn" class="w-5 h-5" />
              </a>
              <a
                href={blueskyShareUrl}
                target="_blank"
                rel="noopener noreferrer"
                title="Share on Bluesky"
                class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 hover:bg-gray-200 transition-colors hover:scale-110"
              >
                <img src={bluesky.src} alt="Bluesky" class="w-5 h-5" />
              </a>
            </div>
          </div>
        </div>

        <!-- Main Article Content -->
        <div class="lg:col-span-3">

      <!-- Blog Body -->
      <div class="prose prose-lg max-w-none mb-12">
        <Content />
      </div>

      <!-- Related Blogs -->
      {relatedBlogs.length > 0 && (
        <aside class="mt-16 pt-8 border-t border-gray-200">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Related Blogs</h2>
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
            {relatedBlogs.map((relatedBlog) => (
              <a
                href={`/blogs/${relatedBlog.slug}`}
                class="group"
              >
                <div class="relative overflow-hidden rounded-lg bg-gray-100 h-48 mb-3">
                  {relatedBlog.data.image && (
                    <img
                      src={relatedBlog.data.image}
                      alt={relatedBlog.data.title}
                      class="h-full w-full object-cover transition-transform duration-200 group-hover:scale-105"
                    />
                  )}
                </div>
                <h3 class="font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                  {relatedBlog.data.title}
                </h3>
                <p class="text-sm text-gray-500 mt-1">
                  {formatDate(relatedBlog.data.date)}
                </p>
              </a>
            ))}
          </div>
        </aside>
      )}
        </div>
      </div>
    </article>
  </main>
</BaseLayout>
