---
import { getCollection } from "astro:content";
import Hero from "../../components/Hero.astro";
import "../../styles/global.css";
import BlogCarouselWrapper from "../../components/BlogCarouselWrapper";
import BlogsLayout from "@/layouts/BlogsLayout.astro";
---

<BlogsLayout>
  <section class="p-12 h-full">
    <BlogCarouselWrapper client:load blogs={await getCollection("blogs")} />
  </section>
</BlogsLayout>

<script>
  const nav = document.getElementsByTagName("header")[0];
  nav.classList.add("bg-black");
</script>