---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
const updates = [
  { page: "News", link: "/news" },
  { page: "Workshops", link: "/workshops" },
  { page: "Activity", link: "/activity" },
];
import Hero from "../components/Hero.astro";
---

<BaseLayout title="Updates">
  <Hero title="Updates" />

  <!-- Main content section - mobile-first approach -->
  <section class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="py-6 sm:py-8 lg:py-12">
      <!-- Mobile-first card layout -->
      <div class="space-y-4 sm:space-y-6 lg:space-y-8">
        {
          updates.map((page) => (
            <a
              href={page.link}
              class="block w-full bg-white border border-gray-200 rounded-lg shadow-sm hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
            >
              <!-- Mobile: stacked layout, Desktop: horizontal layout -->
              <div class="flex flex-col md:flex-row md:items-center">
                <!-- Image container - mobile-first sizing -->
                <div class="flex-shrink-0 w-full md:w-48">
                  <img
                    class="object-cover w-full h-48 rounded-t-lg md:h-32 md:rounded-l-lg md:rounded-t-none"
                    src="/moose_logo.png"
                    alt={`${page.page} illustration`}
                    loading="lazy"
                  />
                </div>
                
                <!-- Content container - mobile-first padding -->
                <div class="flex-1 p-4 sm:p-6 md:p-8">
                  <h2 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-2xl md:text-3xl">
                    {page.page}
                  </h2>
                  
                  <!-- Optional description - uncomment if needed -->
                  {/* <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 sm:text-base">
                    Explore the latest {page.page.toLowerCase()} and stay updated with our community.
                  </p> */}
                  
                  <!-- Mobile-friendly CTA indicator -->
                  <div class="mt-3 flex items-center text-sm text-blue-600 dark:text-blue-400">
                    <span>View {page.page}</span>
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Ensure script runs after DOM is loaded
  document.addEventListener('DOMContentLoaded', function() {
    const nav = document.getElementsByTagName("header")[0];
    if (nav) {
      nav.classList.add("bg-black");
    }
  });
</script>