---
interface Props {
  title: string;
  description: string;
  href: string;
}

const { title, description, href } = Astro.props;
---

<div class="bg-blue-50 p-6 rounded-lg shadow-sm flex flex-col">
  <h3 class="text-xl text-text-primary font-semibold mb-3">
    {title}
  </h3>
  <p class="text-text-subtle font-normal mb-4">
    {description}
  </p>
  <a
    href={href}
    class="text-brand-tertiary hover:border-b-2 hover:border-highlight-neon inline-flex items-center mt-auto"
    >Learn more <span class="ml-1">â†’</span></a
  >
</div>
